@model PT.Entities.ViewModel.UsersViewModel
@{
    ViewBag.Title = $"Kullanıcı Düzenle - {Model.Username}";
}

<h2>@Model.Name @Model.Surname</h2>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.userId)
            <div class="form-group">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @class = " form-control", placeholder = "Kullanıcı Adı" })
            </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, new { @class = " form-control", placeholder = "Ad" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Surname)
                    @Html.TextBoxFor(x => x.Surname, new { @class = " form-control", placeholder = "Soyad" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = " form-control", placeholder = "E-Mail" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Salary)
                    @Html.TextBoxFor(x => x.Salary, new { @class = " form-control", placeholder = "Maaş" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.RoleName)

                    @Html.DropDownListFor(x => x.RoleId, (List<SelectListItem>)ViewBag.roles, new { @class = " form-control", placeholder = "Role" })
                </div>
               
                <div class="row">
                    <div class="col-sm-6">
                        <input type="submit" value="Güncelle" class="btn btn-block btn-success" />
                    </div>
                    <div class="col-sm-6">
                        <input type="submit" value="Sil" class="btn btn-block btn-success" />
                    </div>
                </div>
        }
    </div>
</div>


