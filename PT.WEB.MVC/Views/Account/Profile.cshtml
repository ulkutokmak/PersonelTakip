@using PT.Entities.ViewModel
@model ProfileViewModel
@{
    ViewBag.Title = $"Profil Ekranı - {Model.Username}";
}

<h2>@Model.Name @Model.Surname</h2>
@Html.ValidationSummary()

<div class="row">
    <div class=" col-md-6">
        @using (Html.BeginForm("Profile", "Account", FormMethod.Post))
        {
            @Html.Raw(ViewBag.sonuc)
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Username )
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" ,placeholder="Kullanıcı Adı",@readonly=true})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Surname)
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyad" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-mail" })
            </div>
            @Html.HiddenFor(x => x.Id)
            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" value="Profili Güncelle" class="btn btn-success btn-block" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.OldPassword)
                @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control",type="password", placeholder = "Eski Şifre" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.NewPassword)
                @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", type = "password", placeholder = "Yeni Şifre" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.NewPasswordConfirm)
                @Html.TextBoxFor(x => x.NewPasswordConfirm, new { @class = "form-control", type = "password", placeholder = "Yeni Şifre Tekrar" })
            </div>
            @Html.HiddenFor(x => x.Id)
            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" value="Şifre Güncelle" class="btn btn-primary btn-block" />
                </div>@*her submit içinde bulunduğu formu gönderir.*@
            </div>
        }
    </div>
</div>